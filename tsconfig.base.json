{
	"compileOnSave": false,
	"compilerOptions": {
		"rootDir": ".",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"esModuleInterop": true,
		"target": "es2015",
		"module": "esnext",
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@proficient/adapters": ["packages/libs/adapters/src/index.ts"],
			"@proficient/entities": ["packages/libs/entities/src/index.ts"],
			"@proficient/exceptions": ["packages/libs/exceptions/src/index.ts"],
			"@proficient/features/specials": [
				"packages/libs/features/specials/src/index.ts"
			],
			"@proficient/fixtures": ["packages/libs/fixtures/src/index.ts"],
			"@proficient/functions": ["packages/libs/functions/src/index.ts"],
			"@proficient/interactors": ["packages/libs/interactors/src/index.ts"],
			"@proficient/services/customers": [
				"packages/libs/services/customers/src/index.ts"
			],
			"@proficient/services/projects": [
				"packages/libs/services/projects/src/index.ts"
			],
			"@proficient/services/specials": [
				"packages/libs/services/specials/src/index.ts"
			],
			"@proficient/services/users": [
				"packages/libs/services/users/src/index.ts"
			],
			"@proficient/types": ["packages/libs/types/src/index.ts"],
			"@proficient/utils": ["packages/libs/utils/src/index.ts"]
		}
	},
	"exclude": ["node_modules", "tmp"]
}
